<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/default_gap" >

    <LinearLayout android:id="@+id/asignatura_detalles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true" >

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            style="?attr/selectableItemBackground" >
            <android.support.design.widget.TextInputEditText android:id="@+id/asignatura_nombre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/default_gap"
                style="?android:textAppearanceLarge"
                android:hint="@string/label_asignatura"
                tools:text="Asignatura" />
        </android.support.design.widget.TextInputLayout>

        <TextView android:id="@+id/asignatura_promedio"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_gap"
            style="?android:textAppearance"
            tools:text="3.2" />

        <ImageButton android:id="@+id/agregar"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:src="@android:drawable/ic_input_add"
            android:contentDescription="@android:string/cancel" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView android:id="@+id/list_notas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/nota_peso_list_item"
        tools:context=".view.AsignaturaFragment" />

</LinearLayout>
